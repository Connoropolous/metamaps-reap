<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <h3>Sign in</h3>

  <div><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password %></div>

  <div><%= f.submit "Sign in" %></div>
<% end %>